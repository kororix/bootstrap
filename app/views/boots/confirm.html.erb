<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @boot, url: boots_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>

  <p>タイトル:<%= @boot.title %></p>
  <p>本文:<%= @boot.content %></p>
  <%= form.submit  "登録する" %>
<% end %>

<%= form_with(model: @boot, url: new_boot_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.submit "もどる", name: 'back' %>
<% end %>
