<%= form_with(model: Boot.new, local: true) do |form| %>
  <% if @boot.errors.any? %>
    <div id="error_explanation">
      <h2><%= @boot.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @boot.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="boot_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="boot_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>
